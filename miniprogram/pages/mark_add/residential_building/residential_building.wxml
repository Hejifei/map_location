<view class="container ">
    <view class="itemWrapper">
        <view class="title">选择建筑类型（单选）</view>
        <view class="itemContent radioGroupWrapper" >
            <van-radio-group
                direction="horizontal"
                readonly="{{isReadonly}}"
                model:value="{{building_type}}"
            >
                <van-radio
                    custom-class="radio"
                    wx:for="{{buildingTypeList}}"
                    wx:key="name"
                    wx:for-item="item"
                    name="{{item.name}}"
                >
                    {{item.name}}
                </van-radio>
            </van-radio-group>
        </view>
    </view>

    <view class="itemWrapper">
        <view class="title">小区基本信息</view>
        <van-cell-group>
            <van-field
                clearable
                label="小区名称"
                placeholder="请输入小区名称"
                input-align="right"
                readonly="{{isReadonly}}"
                model:value="{{community_name}}"
            />
            <van-field
                clearable
                label="住宅建筑面积（平方米）"
                placeholder="请输入平方米"
                input-align="right"
                type="number"
                title-width="200px"
                readonly="{{isReadonly}}"
                model:value="{{residential_building_area}}"
            />
            <van-field
                clearable
                label="建成年份"
                placeholder="请输入年份"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{year_built}}"
            />
            <van-field
                clearable
                label="房屋总套数"
                placeholder="请输入房屋总套"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{total_number_houses}}"
            />
            <van-field
                clearable
                label="已入住总套数"
                placeholder="请输入入住总套数"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{total_number_suites_occupied}}"
            />
        </van-cell-group>
    </view>

    <view class="itemWrapper">
        <view class="title">配建（划线）停车位情况</view>
        <van-cell-group>
            <van-field
                clearable
                label="地下停车位"
                placeholder="请输入个数"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{underground_parking_space}}"
            />
            <van-field
                clearable
                label="地面停车位"
                placeholder="请输入个数"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{ground_parking_space}}"
            />
            <van-field
                clearable
                label="总停车位"
                placeholder="请输入个数"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{total_parking_space}}"
            />
            <van-field
                clearable
                label="其中对外开放车位"
                placeholder="请输入个数"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{including_open_parking_spaces}}"
            />
        </van-cell-group>
    </view>

    <view class="itemWrapper">
        <view class="title">收费方式及收费标准（拍摄停车收费公示牌照片)</view>
        <van-cell-group>
            <van-cell
                title="是否收费"
            >
                <van-icon slot="right-icon" >
                    <van-radio-group
                        direction="horizontal"
                        readonly="{{isReadonly}}"
                        model:value="{{is_charge}}"
                    >
                        <van-radio
                            custom-class="radio"
                            wx:for="{{chargeOptionList}}"
                            wx:key="name"
                            wx:for-item="item"
                            name="{{item.value}}"
                        >
                            {{item.name}}
                        </van-radio>
                    </van-radio-group>
                </van-icon>
            </van-cell>
            <van-cell
                title="收费方式"
            >
                <van-icon slot="right-icon" >
                    <van-radio-group
                        direction="horizontal"
                        readonly="{{isReadonly}}"
                        model:value="{{charging_method}}"
                    >
                        <van-radio
                            custom-class="radio"
                            wx:for="{{chargingMmethodOptionList}}"
                            wx:key="name"
                            wx:for-item="item"
                            name="{{item.value}}"
                        >
                            {{item.name}}
                        </van-radio>
                    </van-radio-group>
                </van-icon>
            </van-cell>
            <van-field
                clearable
                label="道闸品牌"
                placeholder="请输入道闸品牌 "
                input-align="right"
                readonly="{{isReadonly}}"
                model:value="{{barrier_brand}}"
            />
            <van-field
                clearable
                label="包月收费"
                placeholder="请输入价格（元/月）  "
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{monthly_charge}}"
            />
            <van-field
                clearable
                label="免费时长"
                placeholder="请输入时间（分钟）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{free_time}}"
            />
            <van-field
                clearable
                label="白天按次收费"
                placeholder="请输入年份"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{charge_per_time_during_the_day}}"
            />
            <van-field
                clearable
                label="白天按时收费"
                placeholder="请输入价格（元/小时）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{charge_on_time_during_the_day}}"
            />
            <van-field
                clearable
                label="夜间按次收费"
                placeholder="请输入价格（元/次）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{charge_per_night}}"
            />
            <van-field
                clearable
                label="夜间按时收费"
                placeholder="请输入价格（元/小时）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{charge_on_time_at_night}}"
            />
            <van-field
                clearable
                label="其他"
                placeholder="请输入内容"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{other}}"
            />
        </van-cell-group>
    </view>

    <view class="itemWrapper">
        <view class="title">停车需求信息</view>
        <van-cell-group>
            <van-cell
                title="第一次记录时间"
                bind:click="onTimeSelectTap"
            >
                <van-icon
                    slot="right-icon"
                    wx:if="{{first_recording_time}}"
                >
                    {{first_recording_time}}
                </van-icon>
                <van-icon
                    slot="right-icon"
                    wx:else
                >
                    <view class='selectPlease'>
                        请选择时间
                    </view>
                </van-icon>
            </van-cell>
            <van-field
                clearable
                label="划线停车数"
                placeholder="请输入停车位数量（辆）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{first_number_of_crossed_stops}}"
            />
            <van-field
                clearable
                label="未划线停车数"
                placeholder="请输入停车位数量（辆）"
                input-align="right"
                type="number"
                readonly="{{isReadonly}}"
                model:value="{{first_number_of_unmarked_stops}}"
            />
        </van-cell-group>
        
    </view>

    <view class="btn_wrapper">
        <van-button
            class="button"
            type="primary"
            bindtap="onSubmitBtnTap"
        >
            登录
        </van-button>
    </view>

    <van-popup
        wx:if="isTimeSelectVisible"
        show="{{isTimeSelectVisible}}"
        position="bottom"
        custom-style="height: 350px;"
        bind:close="onTimeSelectClose"
    >
        <van-datetime-picker
            type="time"
            value="{{first_recording_time}}"
            bind:change="onTimeChange"
            bind:confirm="onTimeSelectConfirm"
            bind:cancel="onTimeSelectClose"
            />
    </van-popup>
</view>
